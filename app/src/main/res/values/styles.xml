<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/display_medium</item>
    </style>

    <style name="FontHeading">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/semibold</item>
        <item name="android:textColor">@color/grayDark</item>
        <item name="android:textAlignment">textStart</item>
    </style>


    <style name="FontHeadingLight">
        <item name="android:textSize"> 30sp </item>
        <item name="android:fontFamily">@font/regular </item>
        <item name="android:textColor">@color/grayDark </item>
        <item name="android:textAlignment"> textStart </item>
    </style>

    <style name="FontBody">
        <item name="android:textSize"> 18sp </item>
        <item name="android:fontFamily"> @font/regular </item>
        <item name="android:textColor"> @color/grayDark </item>
        <item name="android:textAlignment"> textStart </item>
    </style>


    <style name="FontBodySm">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/grayDark</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="FontHeadingSm">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/semibold</item>
        <item name="android:textColor">@color/grayDark</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="FontHeadingXsm">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/semibold</item>
        <item name="android:textColor">@color/grayDark</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="BtnPrimary">
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:fontFamily">@font/semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button_fs</item>
    </style>

    <style name="BtnDanger">`
        <item name="android:background">@drawable/btn_danger</item>
        <item name="android:fontFamily">@font/semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button_fs</item>
    </style>


    <style name="BtnLight">`
        <item name="android:background">@drawable/btn_light</item>
        <item name="android:fontFamily">@font/semibold</item>
        <item name="android:textColor">@color/grayDark</item>
        <item name="android:textSize">@dimen/button_fs</item>
    </style>

    <style name="BtnLink">
        <item name="android:background">@drawable/btn_link</item>
        <item name="android:fontFamily">@font/semibold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/button_fs</item>
    </style>

    <style name="TextInput">
        <item name="android:textSize">@dimen/edit_text_fs</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:padding">@dimen/padding_top</item>
        <item name="android:fontFamily">@font/semibold</item>
        <item name="android:textColor">@color/grayDark</item>
        <item name="android:textColorHint"> @color/grayLightest </item>
    </style>

    <style name="CodeEditor">
        <item name="android:textSize">@dimen/edit_text_code</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:padding">@dimen/padding_top</item>
        <item name="android:fontFamily">@font/mono_regular</item>
        <item name="android:textColor">@color/grayDark</item>
        <item name="android:textColorHint"> @color/grayLightest </item>
    </style>


    <style name="CourseThumb">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textColor">@color/grayDark</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps"> false </item>
        <item name="android:gravity"> bottom</item>
    </style>

    <style name="ButtonIcon">
        <item name="android:background"> @drawable/btn_circular </item>
    </style>

    <style name="FragmentStyle">
        <item name="android:paddingBottom">50sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
